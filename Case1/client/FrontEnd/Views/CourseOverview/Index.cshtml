@model IEnumerable<Frontend.Agents.Models.Course>
@{
    ViewData["Title"] = "Cursussen";
}
<br />
<div class="container">
    <div class="jumbotron">
        <h1>Cursus overzicht van week 12</h1>
    </div>
    @if (Model.Count() == 0)
    {
        <p>Deze week zijn er geen cursussen. <a asp-area="" asp-controller="CourseUpload" asp-action="Index">Importeer ze hier!</a></p>
    }
    else
    {
        <table class="table">
            <thead>
            <th>Startdatum</th>
            <th>Duur in dagen</th>
            <th>Titel</th>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.StartDate</td>
                        <td>@course.DurationInDays</td>
                        <td>@course.Title</td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>