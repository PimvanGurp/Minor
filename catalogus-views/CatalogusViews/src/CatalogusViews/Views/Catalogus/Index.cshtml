@model IEnumerable<CatalogusViews.Controllers.Artikel>

<div role="main" class="main shop">

	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<hr class="tall">
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<h1 class="mb-none"><strong>Shop</strong></h1>
			</div>
		</div>

		<div class="row">

			<ul class="products product-thumb-info-list" data-plugin-masonry>
                @foreach (var artikel in Model)
                {
                    <li class="col-md-3 col-sm-6 col-xs-12 product">
                        <span class="product-thumb-info">
                            <a href="Artikel/Details/@artikel.ID">
                                <span class="product-thumb-info-image">
                                    <span class="product-thumb-info-act">
                                        <span class="product-thumb-info-act-left"><em>Bekijk</em></span>
                                        <span class="product-thumb-info-act-right"><em><i class="fa fa-plus"></i> Artikel</em></span>
                                    </span>
                                    <img alt="" class="img-responsive" src="~/images/products/@artikel.FotoUrl">
                                </span>
                            </a>
                            <span class="product-thumb-info-content">
                                <a href="Artikel/Details/@artikel.ID">
                                    <h4>@artikel.Naam</h4>
                                    <span class="price">
                                        <span class="amount">€@artikel.Prijs</span>
                                    </span>
                                </a>
                            </span>
                        </span>
                    </li>
                }
			</ul>
		</div>
	</div>
</div>

